<div class="container">
  <div class="d-flex justify-content-between">
    <div class="presentation">
      <div class="title">
        <h1><%= @unicorn.name %> -</h1>
        <div class="rating">
          <% sum = 0 %>
          <% if @unicorn.bookings.size == 0 %>
            <% 5.times do %>
              <i class="far fa-star"></i>
            <% end %>
          <% else %>
            <% @unicorn.bookings.each do |booking| %>
              <% if booking.rating != nil %>
                <% sum += booking.rating %>
              <% else %>
                <% sum = 1 %>
              <% end %>
            <% end %>
            <% average = sum / @unicorn.bookings.size %>
            <% average.times do %>
              <i class="fas fa-star"></i>
            <% end %>
            <% (5 - average).times do %>
              <i class="far fa-star"></i>
            <% end %>
          <% end %>
        </div>
      </div>

      <h2>by <%= @unicorn.user.pseudo %></h2>

      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" style="border-radius: 10px">
          <% active = true %>
          <div class="icons">
            <%= link_to "", edit_unicorn_path(@unicorn), :class => "fas fa-pencil-alt"%>
            <%= link_to "", dashboard_path, :class => "far fa-trash-alt", method: :delete, data: { confirm: "Are you sure?" }  %>
          </div>
          <% @unicorn.photos.each do |photo| %>
            <div class="carousel-item <%= 'active' if active %>">
              <%= cl_image_tag photo.key, crop: :fit, class: "d-block w-100", alt: "..." %>
            </div>
            <% active = false %>
          <% end %>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

      <h3><%= @unicorn.price %>‚Ç¨ /jour</h3>

      <div class="content">
        <h2>
          <% if @unicorn.magic_power == "ail√©" %>
            üëº
          <% elsif @unicorn.magic_power == "yogi" %>
            üßò‚Äç‚ôÄÔ∏è
          <% elsif @unicorn.magic_power == "horticultrice" %>
            üå±
          <% elsif @unicorn.magic_power == "voyante" %>
            üîÆ
          <% else %>
            üå°Ô∏è
          <% end %>
          <%= @unicorn.magic_power %>
        </h2>
        <p><%= @unicorn.description %></p>
      </div>

      <div class="avis">
        <h2>Avis</h2>
        <% @unicorn.bookings.each do |booking| %>

          <% if booking.rating != nil %>
            <% (booking.rating).times do %>
              <i class="fas fa-star"></i>
            <% end %>
            <% (5 - booking.rating).times do %>
              <i class="far fa-star"></i>
            <% end %>
          <% else %>
            <% 5.times do %>
              <i class="far fa-star"></i>
            <% end %>
          <% end %>

          <p><%= booking.review %></p>
        <% end %>
      </div>
    </div>

    <div class="booking-card-container">
      <div class="booking-card">
        <div class="booking-card-price-per-half-day">
          <p><strong class="price-per-half-day"><span id="unicorn-price"><%= @unicorn.price %></span>‚Ç¨</strong> /jour</p>
        </div>

        <div class="booking-card-calendar">
          <div class="form-wrapper">
            <%= simple_form_for [@unicorn, @booking] do |f| %>
              <%= f.input :start_date, required: false, label:false, as: :string, input_html: {id: 'start_date'} %>
              <%= hidden_field_tag "booking-start" %>
              <%= f.input :end_date, required: false, label:false, as: :string, input_html: {id: 'end_date'} %>
              <%= hidden_field_tag "booking-end" %>
              <%= f.button :submit, "R√©server ma licorne", class: "btn btn-flat" %>
            <% end %>
          </div>
        </div>

        <div class="booking-card-price-details">
          <div class="booking-card-price-details-list">
            <div class="booking-card-price">
              <p><%= @unicorn.price %>‚Ç¨<span id="booking-duration"> x 1j</span></p>
              <p><span id="unicorn-total-price"><%= @unicorn.price %>‚Ç¨</span></p>
            </div>

            <div class="booking-card-price">
              <p>Frais de service</p>
              <p><span id="service-fees"><%= "#{(@unicorn.price * 0.05).round(2)}‚Ç¨" %></span></p>
            </div>
          </div>
          <div class="booking-card-price-total">

            <div class="booking-card-price">
              <p><strong>TOTAL</strong></p>
              <p><span id="booking-total-price"><%= @unicorn.price %>‚Ç¨</span></p>
            </div>

          </div>

        </div>
      </div>
    </div>
  </div>
</div>
