<%= simple_form_for @unicorn do |f| %>
  <%= f.input :name, input_html: { class: "mb-2 mr-sm-2" } %>
  <%= f.input :magic_power, collection:["Flying", "Healing", "Garden Blooming", "Yogi Master", "Fortune-Telling"], input_html: { class: "mb-2 mr-sm-2" } %>
  <%= f.input :description, input_html: { class: "mb-2 mr-sm-2" } %>
  <%= f.input :price, input_html: { class: "mb-2 mr-sm-2" } %>
  <%= f.input :location, input_html: { class: "mb-2 mr-sm-2" } %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>

  <%= f.button :submit, class: "btn-primary mb-3" %>
<% end %>
