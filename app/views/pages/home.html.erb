<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://media.giphy.com/media/26AHG5KGFxSkUWw1i/giphy.gif); background-size: contain;">
  <div class="container ">
    <h1>Welcome to <strong>the first unicorn rental app!</strong></h1>
    <p>Change your life and use their superpowers</p>

    <div class="form d-flex justify-content-center align-items-center">
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group form-inline">
           <%= button_tag type: 'icon', class: "btn btn-flat left" do %>
            <i class="fas fa-map-marker-alt"></i>
          <% end %>
          <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Location" />
          <input class="form-control string required" type="date" name="search[query]" id="search_query" />
          <input class="form-control string required" type="time" name="search[query]" id="search_query" />
          <%= button_tag type: 'submit', class: "btn btn-flat right" do %>
             Search
            <i class="fas fa-search" aria-hidden="true"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="service">
